@model IEnumerable<Models.ViewModel.SalesViewModel>
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
    var TotalOrder = Model.FirstOrDefault().TotalOrder;
    var ID = Model.FirstOrDefault().ID;
    bool Status = true;
}

@section Heared{
    Chi tiết đơn hàng
}
<div class="content">
    <div class="section group">

        <table class="table">
            <thead>
                <tr>

                    <td>Tên SP</td>
                    <td>Ảnh SP</td>
                    <td>Số lượng</td>
                    <td>Đơn giá</td>
                    <td>Thành tiền</td>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.ProductName</td>
                        <td><img src="@item.ProductImage" width="100" /></td>
                        <td><input type="text" class="txtQuantity" data-id="@item.ProductId" value="@item.Quantity" /></td>
                        <td>@item.Price.ToString("#,000")</td>
                        <td>@item.Total.ToString("N0")</td>

                    </tr>
                }

                <tr>
                    <td colspan="5" style="text-align: right; margin-right: 50px;"> Tổng đơn hàng: @TotalOrder.ToString("#,000") </td>
                </tr>

                <tr>
                    
                    <td colspan="5" style= "text-align: center;">
                        <a style="margin: 20px;" href="@Url.Action("AssessOrder", "Order", new { Status = Status, id = ID })" class="custom-btn btn-4 button-link">Duyệt</a>
                        <a style="margin: 20px;" class="custom-btn btn-5 button-link" href="@Url.Action("AssessOrder", "Order", new { Status = !Status, id = ID })">Huỷ</a>
                    </td>
                </tr>
            </tbody>

        </table>


    </div>
</div>
